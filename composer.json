{
  "name": "eggheads/eggheads-code-style",
  "description": "Eggheads code style ruleset",
  "homepage": "https://eggheads.solutions",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=7.0",
    "squizlabs/php_codesniffer": "3.*",
    "setasign/phpcs-teamcity-report": "^1.0",
    "phpmd/phpmd": "@stable"
  },
  "suggest": {
    "markstory/asset_compress": "An asset compression plugin which provides file concatenation and a flexible filter system for preprocessing and minification.",
    "dereuromark/cakephp-ide-helper": "After baking your code, this keeps your annotations in sync with the code evolving from there on for maximum IDE and PHPStan/Psalm compatibility."
  },
  "autoload": {
    "psr-4": {
      "App\\": "tests/",
      "Eggheads\\": "resources/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests/",
      "Cake\\Test\\": "vendor/cakephp/cakephp/tests/",
      "Eggheads\\": "resources/"
    }
  },
  "scripts": {
    "check": [
      "@test",
      "@cs-check"
    ],
    "cs-check": "phpcs --colors -p tests/ tests/",
    "cs-fix": "phpcbf --colors -p tests/ tests/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  }
}
